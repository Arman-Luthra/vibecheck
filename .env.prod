# Frontend Environment Variables
VITE_API_URL=https://api.yourdomain.com

# Backend Environment Variables
NODE_ENV=production
PORT=5000

# MongoDB Atlas (get from your MongoDB Atlas cluster)
MONGODB_URI=mongodb+srv://your-username:your-password@cluster0.xxxxx.mongodb.net/vibecheck?retryWrites=true&w=majority

# CORS - Your production domain
CORS_ORIGIN=https://yourdomain.com

# Rate Limiting (strict for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# Security Salts (generate secure random strings)
IP_SALT=generate-a-very-long-random-string-here
